<body>
  <div class="container">
    <h1>ðŸŽ¯ Goal Tracker</h1>
    <div class="input-area">
      <input type="text" id="goalInput" placeholder="Enter your goal...">
      <input type="date" id="goalDate" class="date-input">
      <button onclick="addGoal()">Add</button>
    </div>
    <ul id="goalList"></ul>
    
    <div class="progress">
      <p id="progressText">Progress: 0%</p>
      <div class="progress-bar">
        <div class="progress-fill" id="progressFill"></div>
      </div>
    </div>
  </div>

  <script>
    let totalGoals = 0;
    let completedGoals = 0;

    function addGoal() {
      const goalInput = document.getElementById("goalInput");
      const goalDate = document.getElementById("goalDate");
      const goalText = goalInput.value.trim();
      const goalDueDate = goalDate.value;

      if (goalText === "" || goalDueDate === "") {
        alert("Please enter both a goal and a due date.");
        return;
      }

      totalGoals++;

      const li = document.createElement("li");
      const today = new Date().toISOString().split("T")[0]; 

      // Check if overdue
      let statusHTML = "";
      if (goalDueDate < today) {
        li.classList.add("overdue");
        statusHTML = `<span class="status">NOT COMPLETED</span>`;
      }

      li.innerHTML = `
        <span class="goal-text">${goalText} 
          <span class="due-date">(Due: ${goalDueDate})</span>
          ${statusHTML}
        </span>
        <button onclick="completeGoal(this)">Done</button>
      `;

      document.getElementById("goalList").appendChild(li);

      goalInput.value = "";
      goalDate.value = "";
      updateProgress();
    }

    function completeGoal(button) {
      const li = button.parentElement;
      if (!li.classList.contains("completed")) {
        li.classList.remove("overdue"); // remove red if it was overdue
        li.classList.add("completed");
        button.remove();
        completedGoals++;
        updateProgress();
      }
    }

    function updateProgress() {
      const percent = totalGoals > 0 ? Math.round((completedGoals / totalGoals) * 100) : 0;
      document.getElementById("progressText").innerText = `Progress: ${percent}%`;
      document.getElementById("progressFill").style.width = percent + "%";
    }
  </script>
